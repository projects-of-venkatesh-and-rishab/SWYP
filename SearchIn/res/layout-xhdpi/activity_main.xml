<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodwallpaper"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".8"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imageButton_applications"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/imagebuttonApplication"
            android:src="@drawable/application" />

        <ImageButton
            android:id="@+id/imageButton_contacts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/imagebuttonContact"
            android:src="@drawable/contacts" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".9" >

        <TextView
            android:id="@+id/textView_application"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/imgdesApplication"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_contacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/imgdesContacts"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".8" >

        <ImageButton
            android:id="@+id/imageButton_images"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/imgebuttonImage"
            android:src="@drawable/images" />

        <ImageButton
            android:id="@+id/imageButton_music"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/imagebuttonMusic"
            android:src="@drawable/music" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".9" >

        <TextView
            android:id="@+id/textView_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/imgdesImages"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_music"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/imgdesMusic"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".8" >

        <ImageButton
            android:id="@+id/imageButton_compressed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/imagebuttonCompressed"
            android:src="@drawable/rar" />

        <ImageButton
            android:id="@+id/imageButton_videos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/imagebuttonVideo"
            android:src="@drawable/videos" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".9" >

        <TextView
            android:id="@+id/textView_compressed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/imgdesCompressed"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_videos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/imgdesVideos"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".8" >

        <ImageButton
            android:id="@+id/imageButton_others"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/imagebuttonOther"
            android:src="@drawable/others" />

        <ImageButton
            android:id="@+id/imageButton_Documents"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/imagebuttonDocuments"
            android:src="@drawable/documents" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".9" >

        <TextView
            android:id="@+id/textView_others"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/imgdesOthers"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_documents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/imgdesDocuments"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>